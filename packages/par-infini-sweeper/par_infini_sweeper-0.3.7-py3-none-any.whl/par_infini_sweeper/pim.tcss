
MainGrid {
    background: #1e1e1e;
    color: #c5c8c6;
    border: solid #444444;
    padding: 0;
    width: 1fr;
    height: 1fr;
}

Screen {
    background: #121212;
    &>Horizontal{
        width: 1fr;
        height: 1fr;
    }
}

#info {
    height: 1;
    width: 1fr;
}

#debug {
    dock: right;
    width: 30%;
    height: 1fr;
    border-left: solid $accent;
}
