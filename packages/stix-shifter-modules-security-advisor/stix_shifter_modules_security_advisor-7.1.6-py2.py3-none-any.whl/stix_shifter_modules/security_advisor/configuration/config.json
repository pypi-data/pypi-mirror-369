{
    "connection": {
        "type": {
            "displayName": "IBM\u00ae Cloud Security Advisor",
            "group": "securityadvisor",
            "type": "connectorType"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$"
        },
        "help": {
            "type": "link",
            "default": "data-sources-security-advisor.html"
        },
        "options": {
            "type": "fields",
            "async_call": {
                "type": "text",
                "hidden": true,
                "optional": true
            },
            "result_limit": {
                "default": 10000,
                "min": 1,
                "max": 10000000,
                "type": "number",
                "previous": "connection.resultSizeLimit"
            },
            "batch_size": {
                "default": 2000,
                "min": 1,
                "max": 10000,
                "type": "number",
                "optional": true,
                "hidden": true
            },
            "time_range": {
                "default": 5,
                "min": 1,
                "max": 10000,
                "type": "number",
                "previous": "connection.timerange",
                "nullable": true
            },
            "timeout": {
                "default": 30,
                "min": 1,
                "max": 3600,
                "hidden": true,
                "type": "number",
                "previous": "connection.timeoutLimit"
            },
            "dialects": {
                "type": "array",
                "hidden": true,
                "optional": true
            },
            "language": {
                "type": "string",
                "default": "stix",
                "optional": true,
                "hidden": true
            },
            "validate_pattern": {
                "type": "boolean",
                "optional": true,
                "hidden": true,
                "previous": "connection.validate_pattern"
            },
            "stix_validator": {
                "type": "boolean",
                "default": false,
                "optional": true,
                "hidden": true,
                "previous": "connection.stix_validator"
            },
            "mapping": {
                "type": "json",
                "optional": true,
                "previous": "connection.mapping",
                "default": {
                    "to_stix_map": {
                        "author_id": {
                            "key": "user-account.user_id"
                        },
                        "author_accountId": {
                            "key": "x-security-advisor-finding.author_accountId",
                            "object": "x_security_advisor_finding"
                        },
                        "ipv4address": {
                            "key": "ipv4-addr.value"
                        },
                        "ipv6address": {
                            "key": "ipv6-addr.value"
                        },
                        "email": {
                            "key": "email-addr.value"
                        },
                        "domain-name": {
                            "key": "domain-name.value"
                        },
                        "mac-addr": {
                            "key": "mac-addr.value"
                        },
                        "url": {
                            "key": "url.value"
                        },
                        "file": {
                            "key": "file.value"
                        },
                        "directory": {
                            "key": "directory.value"
                        },
                        "context_resourceName": {
                            "key": "x-security-advisor-finding.context_resourceName",
                            "object": "x_security_advisor_finding"
                        },
                        "description": {
                            "key": "x-security-advisor-finding.description",
                            "object": "x_security_advisor_finding"
                        },
                        "finding_severity": {
                            "key": "x-security-advisor-finding.finding_severity",
                            "object": "x_security_advisor_finding"
                        },
                        "finding_certainty": {
                            "key": "x-security-advisor-finding.finding_certainty",
                            "object": "x_security_advisor_finding"
                        },
                        "id": {
                            "key": "x-security-advisor-finding.id",
                            "object": "x_security_advisor_finding"
                        },
                        "longDescription": {
                            "key": "x-security-advisor-finding.longDescription",
                            "object": "x_security_advisor_finding"
                        },
                        "message": {
                            "key": "x-security-advisor-finding.message",
                            "object": "x_security_advisor_finding"
                        },
                        "name": {
                            "key": "x-security-advisor-finding.name",
                            "object": "x_security_advisor_finding"
                        },
                        "noteName": {
                            "key": "x-security-advisor-finding.noteName",
                            "object": "x_security_advisor_finding"
                        },
                        "providerId": {
                            "key": "x-security-advisor-finding.providerId",
                            "object": "x_security_advisor_finding"
                        },
                        "providerName": {
                            "key": "x-security-advisor-finding.providerName",
                            "object": "x_security_advisor_finding"
                        },
                        "remediation": {
                            "key": "x-security-advisor-finding.remediation",
                            "object": "x_security_advisor_finding"
                        },
                        "reportedBy_id": {
                            "key": "x-security-advisor-finding.reportedBy_id",
                            "object": "x_security_advisor_finding"
                        },
                        "reportedBy_title": {
                            "key": "x-security-advisor-finding.reportedBy_title",
                            "object": "x_security_advisor_finding"
                        },
                        "shortDescription": {
                            "key": "x-security-advisor-finding.shortDescription",
                            "object": "x_security_advisor_finding"
                        },
                        "finding_next_steps_0_title": {
                            "key": "x-security-advisor-finding.finding_next_steps_0_title",
                            "object": "x_security_advisor_finding"
                        },
                        "context_accountId": {
                            "key": "x-security-advisor-finding.context_accountId",
                            "object": "x_security_advisor_finding"
                        },
                        "createTime": {
                            "key": "first_observed"
                        },
                        "updateTime": {
                            "key": "last_observed"
                        },
                        "occurence_count": {
                            "key": "number_observed",
                            "transformer": "ToInteger"
                        }
                    }
                }
            },
            "unmapped_fallback": {
                "type": "boolean",
                "default": false,
                "optional": true,
                "hidden": true
            },
            "stix_2.1": {
                "type": "boolean",
                "default": false,
                "optional": true,
                "hidden": true
            }
        }
    },
    "configuration": {
        "auth": {
            "type": "fields",
            "accountID": {
                "type": "password"
            },
            "apiKey": {
                "type": "password"
            }
        }
    }
}