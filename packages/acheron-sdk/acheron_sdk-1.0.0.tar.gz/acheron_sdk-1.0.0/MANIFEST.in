# Include documentation and metadata
include README.md
include LICENSE
include setup.py

# Include type hints marker
include src/acheron/py.typed

# Include all Python source files
recursive-include src *.py

# Include package data
recursive-include src/acheron *.typed

# Exclude development files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .pytest_cache