{
    "connection": {
        "type": {
            "displayName": "Red Hat Advanced Cluster Security for Kubernetes",
            "group": "rhacs",
            "type": "connectorType"
        },
        "host": {
            "type": "text",
            "regex": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9_:/\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9_:/\\-]*[A-Za-z0-9])$"
        },
        "port": {
            "type": "number",
            "default": 443,
            "min": 1,
            "max": 65535
        },
        "help": {
            "type": "link",
            "default": "data-sources.html"
        },
        "selfSignedCert": {
            "type": "password",
            "optional": true
        },
        "options": {
            "type": "fields",
            "async_call": {
                "type": "text",
                "hidden": true,
                "optional": true
            },
            "result_limit": {
                "default": 10000,
                "min": 1,
                "max": 10000000,
                "type": "number",
                "previous": "connection.resultSizeLimit"
            },
            "batch_size": {
                "default": 2000,
                "min": 1,
                "max": 10000,
                "type": "number",
                "optional": true,
                "hidden": true
            },
            "time_range": {
                "default": 5,
                "min": 1,
                "max": 10000,
                "type": "number",
                "previous": "connection.timerange",
                "nullable": true
            },
            "timeout": {
                "default": 30,
                "min": 1,
                "max": 3600,
                "hidden": true,
                "type": "number",
                "previous": "connection.timeoutLimit"
            },
            "dialects": {
                "type": "array",
                "hidden": true,
                "optional": true
            },
            "language": {
                "type": "string",
                "default": "stix",
                "optional": true,
                "hidden": true
            },
            "validate_pattern": {
                "type": "boolean",
                "optional": true,
                "hidden": true,
                "previous": "connection.validate_pattern"
            },
            "stix_validator": {
                "type": "boolean",
                "default": false,
                "optional": true,
                "hidden": true,
                "previous": "connection.stix_validator"
            },
            "mapping": {
                "type": "json",
                "optional": true,
                "previous": "connection.mapping",
                "default": {
                    "from_stix_map": {
                        "x-rhacs-cluster": {
                            "fields": {
                                "name": [
                                    "Cluster"
                                ],
                                "id": [
                                    "Cluster ID"
                                ],
                                "namespace": [
                                    "Namespace"
                                ]
                            }
                        },
                        "x-rhacs-deployment": {
                            "fields": {
                                "name": [
                                    "Deployment"
                                ],
                                "isactive": [
                                    "Inactive Deployment"
                                ]
                            }
                        },
                        "x-ibm-finding": {
                            "fields": {
                                "name": [
                                    "Policy"
                                ],
                                "time_observed": [
                                    "Violation Time"
                                ],
                                "severity": [
                                    "Severity"
                                ],
                                "extensions.'x-rhacs-finding'.categories[*]": [
                                    "Category"
                                ],
                                "extensions.'x-rhacs-finding'.lifecycle_stage": [
                                    "Lifecycle Stage"
                                ],
                                "extensions.'x-rhacs-finding'.violation_state": [
                                    "Violation State"
                                ],
                                "extensions.'x-rhacs-finding'.resource_type": [
                                    "Resource Type"
                                ]
                            }
                        }
                    },
                    "operators": {
                        "ComparisonExpressionOperators.And": "+",
                        "ComparisonComparators.Equal": ":",
                        "ComparisonComparators.NotEqual": ":!",
                        "ComparisonComparators.Like": ":r/",
                        "ComparisonComparators.Matches": ":r/",
                        "ComparisonComparators.GreaterThan": ":>",
                        "ComparisonComparators.GreaterThanOrEqual": ":>=",
                        "ComparisonComparators.LessThan": ":<",
                        "ComparisonComparators.LessThanOrEqual": ":<=",
                        "ObservationOperators.Or": "OR",
                        "ObservationOperators.And": "OR"
                    },
                    "type_map": {
                        "int_supported_fields": [
                            "Severity"
                        ],
                        "string_supported_fields": [
                            "Cluster",
                            "Cluster ID",
                            "Deployment",
                            "Namespace",
                            "Policy",
                            "Category"
                        ],
                        "boolean_supported_fields": [
                            "Inactive Deployment"
                        ],
                        "timestamp_supported_fields": [
                            "Violation Time"
                        ],
                        "enum_supported_fields": [
                            "Violation State",
                            "Lifecycle Stage",
                            "Resource Type"
                        ],
                        "enum_supported_values": {
                            "Violation State": [
                                "ACTIVE",
                                "RESOLVED"
                            ],
                            "Lifecycle Stage": [
                                "RUNTIME",
                                "DEPLOY"
                            ],
                            "Resource Type": [
                                "DEPLOYMENT"
                            ]
                        }
                    },
                    "to_stix_map": {
                        "findingType": {
                            "key": "x-ibm-finding.finding_type",
                            "object": "finding"
                        },
                        "policyName": [
                            {
                                "key": "x-ibm-finding.name",
                                "object": "finding"
                            },
                            {
                                "key": "x-rhacs-policy.description",
                                "object": "policy"
                            }
                        ],
                        "alertId": {
                            "key": "x-ibm-finding.extensions.x-rhacs-finding.alert_id",
                            "object": "finding"
                        },
                        "cluster": [
                            {
                                "key": "x-rhacs-cluster.name",
                                "object": "cluster"
                            },
                            {
                                "key": "x-ibm-finding.extensions.x-rhacs-finding.cluster_ref",
                                "object": "finding",
                                "references": "cluster"
                            }
                        ],
                        "clusterId": {
                            "key": "x-rhacs-cluster.cluster_id",
                            "object": "cluster"
                        },
                        "namespace": {
                            "key": "x-rhacs-cluster.namespace",
                            "object": "cluster"
                        },
                        "namespaceId": {
                            "key": "x-rhacs-cluster.namespace_id",
                            "object": "cluster"
                        },
                        "deploymentId": {
                            "key": "x-rhacs-deployment.deployment_id",
                            "object": "deployment"
                        },
                        "deployment": [
                            {
                                "key": "x-rhacs-deployment.deployment_name",
                                "object": "deployment"
                            },
                            {
                                "key": "x-ibm-finding.extensions.x-rhacs-finding.deployment_ref",
                                "object": "finding",
                                "references": "deployment"
                            }
                        ],
                        "lifecycleStage": {
                            "key": "x-ibm-finding.extensions.x-rhacs-finding.lifecycle_stage",
                            "object": "finding"
                        },
                        "policyId": [
                            {
                                "key": "x-rhacs-policy.policy_id",
                                "object": "policy"
                            },
                            {
                                "key": "x-ibm-finding.extensions.x-rhacs-finding.policy_ref",
                                "object": "finding",
                                "references": "policy"
                            }
                        ],
                        "description": {
                            "key": "x-rhacs-policy.description",
                            "object": "policy"
                        },
                        "rationale": {
                            "key": "x-rhacs-policy.rationale",
                            "object": "policy"
                        },
                        "remediation": {
                            "key": "x-rhacs-policy.remediation",
                            "object": "policy"
                        },
                        "disabled": {
                            "key": "x-rhacs-policy.disabled",
                            "object": "policy"
                        },
                        "categories": {
                            "key": "x-ibm-finding.extensions.x-rhacs-finding.categories",
                            "object": "finding"
                        },
                        "eventSource": {
                            "key": "x-rhacs-policy.event_source",
                            "object": "policy"
                        },
                        "severity": {
                            "key": "x-ibm-finding.severity",
                            "object": "finding",
                            "transformer": "SeverityToScore"
                        },
                        "lastUpdated": {
                            "key": "x-rhacs-policy.last_updated",
                            "object": "policy"
                        },
                        "sortName": {
                            "key": "x-rhacs-policy.sort_name",
                            "object": "policy"
                        },
                        "sortLifecycleStage": {
                            "key": "x-rhacs-policy.sort_lifecycle_stage",
                            "object": "policy"
                        },
                        "violationMessage": {
                            "key": "x-ibm-finding.extensions.x-rhacs-finding.description",
                            "object": "finding"
                        },
                        "violationState": {
                            "key": "x-ibm-finding.extensions.x-rhacs-finding.violation_state",
                            "object": "finding"
                        },
                        "process": {
                            "name": [
                                {
                                    "key": "process.name",
                                    "object": "proc"
                                },
                                {
                                    "key": "x-rhacs-container.process_ref",
                                    "object": "cntr",
                                    "references": "proc"
                                }
                            ],
                            "args": {
                                "key": "process.arguments",
                                "object": "proc",
                                "transformer": "ToLowercaseArray"
                            },
                            "pid": {
                                "key": "process.pid",
                                "object": "proc"
                            },
                            "execFilePath": {
                                "key": "process.cwd",
                                "object": "proc"
                            },
                            "time": {
                                "key": "process.created",
                                "object": "proc"
                            },
                            "id": {
                                "key": "process.x_unique_id",
                                "object": "proc"
                            },
                            "uid": [
                                {
                                    "key": "user-account.user_id",
                                    "object": "user"
                                },
                                {
                                    "key": "process.creator_user_ref",
                                    "object": "proc",
                                    "references": "user"
                                }
                            ],
                            "gid": {
                                "key": "user-account.extensions.x-rhacs-user-account.gid",
                                "object": "user"
                            },
                            "podId": {
                                "key": "process.extensions.x-rhacs-process.pod_id",
                                "object": "proc"
                            },
                            "podUid": {
                                "key": "process.extensions.x-rhacs-process.pod_uid",
                                "object": "proc"
                            },
                            "containerName": {
                                "key": "process.extensions.x-rhacs-process.container_name",
                                "object": "proc"
                            }
                        },
                        "networkFlow": {
                            "netflow_protocol": {
                                "key": "x-rhacs-networkflow.protocol",
                                "object": "netflow"
                            },
                            "netflow_source": {
                                "name": {
                                    "key": "x-rhacs-networkflow.source.name",
                                    "object": "netflow"
                                },
                                "entity_type": {
                                    "key": "x-rhacs-networkflow.source.entity_type",
                                    "object": "netflow"
                                },
                                "deployment_namespace": {
                                    "key": "x-rhacs-networkflow.source.deployment_namespace",
                                    "object": "netflow"
                                },
                                "deployment_type": {
                                    "key": "x-rhacs-networkflow.source.deployment_type",
                                    "object": "netflow"
                                },
                                "port": {
                                    "key": "x-rhacs-networkflow.source.port",
                                    "object": "netflow"
                                }
                            },
                            "netflow_destination": {
                                "name": {
                                    "key": "x-rhacs-networkflow.destination.name",
                                    "object": "netflow"
                                },
                                "entity_type": {
                                    "key": "x-rhacs-networkflow.destination.entity_type",
                                    "object": "netflow"
                                },
                                "deployment_namespace": {
                                    "key": "x-rhacs-networkflow.destination.deployment_namespace",
                                    "object": "netflow"
                                },
                                "deployment_type": {
                                    "key": "x-rhacs-networkflow.destination.deployment_type",
                                    "object": "netflow"
                                },
                                "port": {
                                    "key": "x-rhacs-networkflow.destination.port",
                                    "object": "netflow"
                                }
                            },
                            "time": {
                                "key": "x-rhacs-networkflow.time",
                                "object": "netflow"
                            }
                        },
                        "containerName": [
                            {
                                "key": "x-rhacs-container.container_name",
                                "object": "cntr"
                            },
                            {
                                "key": "x-rhacs-deployment.container_refs",
                                "object": "deployment",
                                "references": [
                                    "cntr"
                                ]
                            }
                        ],
                        "containerImage": {
                            "id": {
                                "key": "x-rhacs-container.image.id",
                                "object": "cntr"
                            },
                            "name": {
                                "registry": {
                                    "key": "x-rhacs-container.image.name.registry",
                                    "object": "cntr"
                                },
                                "remote": {
                                    "key": "x-rhacs-container.image.name.remote",
                                    "object": "cntr"
                                },
                                "tag": {
                                    "key": "x-rhacs-container.image.name.tag",
                                    "object": "cntr"
                                },
                                "fullName": {
                                    "key": "x-rhacs-container.image.name.full_name",
                                    "object": "cntr"
                                }
                            }
                        },
                        "inactive": {
                            "key": "x-rhacs-deployment.isactive",
                            "object": "deployment",
                            "transformer": "ToIsactive"
                        },
                        "firstObserved": {
                            "key": "first_observed"
                        },
                        "lastObserved": {
                            "key": "last_observed"
                        }
                    }
                }
            },
            "unmapped_fallback": {
                "type": "boolean",
                "default": false,
                "optional": true,
                "hidden": true
            },
            "stix_2.1": {
                "type": "boolean",
                "default": false,
                "optional": true,
                "hidden": true
            }
        }
    },
    "configuration": {
        "auth": {
            "type": "fields",
            "token": {
                "type": "password"
            }
        }
    }
}