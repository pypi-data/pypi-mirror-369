#!/usr/bin/make -f

# Debian package build rules
# This file tells dpkg-buildpackage how to build your package

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_clean:
	python3 setup.py clean -a
	find . -name \*.pyc -delete

override_dh_auto_build:
	python3 setup.py build

override_dh_auto_test:
	# Skip tests during package build (optional)
	# python3 -m pytest tests/

override_dh_auto_install:
	python3 setup.py install --root=$(CURDIR)/debian/pypi-package-updater --prefix=/usr

override_dh_usrlocal:
