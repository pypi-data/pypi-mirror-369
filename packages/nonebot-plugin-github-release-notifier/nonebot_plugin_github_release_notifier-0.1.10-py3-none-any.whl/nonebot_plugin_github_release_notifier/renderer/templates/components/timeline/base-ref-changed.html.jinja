{% from "icons/branch.html.jinja" import octicon_branch %}

{#
actor: str
actor_avatar: str
created_at: datetime
#}
{% macro base_ref_changed(actor, actor_avatar, created_at) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge">
    {{ octicon_branch() }}
  </div>
  <div class="TimelineItem-body">
    <a class="d-inline-block">
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ actor_avatar }}"
      />
    </a>
    <a class="author Link--primary text-bold">
      {{ actor|escape }}
    </a>
    changed the base branch
    <a class="Link--secondary">{{ created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
