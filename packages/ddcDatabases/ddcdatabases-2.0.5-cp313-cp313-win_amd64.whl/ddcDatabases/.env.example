# ddcDatabases Environment Variables Example
# Copy this file to .env and adjust values as needed

# SQLite Database Settings
SQLITE_FILE_PATH=sqlite.db
SQLITE_ECHO=false

# PostgreSQL Database Settings
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=password
POSTGRESQL_DATABASE=postgres
POSTGRESQL_ECHO=false
POSTGRESQL_SYNC_DRIVER=postgresql+psycopg2
POSTGRESQL_ASYNC_DRIVER=postgresql+asyncpg

# Microsoft SQL Server Database Settings
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_USER=sa
MSSQL_PASSWORD=password
MSSQL_DATABASE=master
MSSQL_DB_SCHEMA=dbo
MSSQL_ECHO=false
MSSQL_POOL_SIZE=20
MSSQL_MAX_OVERFLOW=10
MSSQL_ODBCDRIVER_VERSION=17
MSSQL_SYNC_DRIVER=mssql+pyodbc
MSSQL_ASYNC_DRIVER=mssql+aioodbc

# MySQL Database Settings
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=dev
MYSQL_ECHO=false
MYSQL_SYNC_DRIVER=mysql+pymysql
MYSQL_ASYNC_DRIVER=mysql+aiomysql

# MongoDB Database Settings
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=admin
MONGODB_DATABASE=admin
MONGODB_BATCH_SIZE=2865
MONGODB_LIMIT=0
MONGODB_SYNC_DRIVER=mongodb

# Oracle Database Settings
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_USER=system
ORACLE_PASSWORD=oracle
ORACLE_SERVICENAME=xe
ORACLE_ECHO=false
ORACLE_SYNC_DRIVER=oracle+cx_oracle
