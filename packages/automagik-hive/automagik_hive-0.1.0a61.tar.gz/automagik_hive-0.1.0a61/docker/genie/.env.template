# Automagik Hive Genie Container Environment
# Copy this file to .env and customize as needed
#
# Genie Container Configuration (Docker-specific)
# External Ports: 48532 (postgres), 48886 (api)

# =============================================================================
# DATABASE CONFIGURATION (Container Internal)
# =============================================================================  
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hive_genie
POSTGRES_USER=genie
POSTGRES_PASSWORD=genie_password

# =============================================================================
# API CONFIGURATION (Container Internal)
# =============================================================================
HIVE_API_HOST=0.0.0.0
HIVE_API_PORT=48886
HIVE_API_WORKERS=2
HIVE_ENVIRONMENT=genie-consultation

# =============================================================================
# SECURITY CONFIGURATION  
# =============================================================================
HIVE_API_KEY=genie-orchestration-key-67890

# =============================================================================
# ORCHESTRATION CONFIGURATION
# =============================================================================
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300
ORCHESTRATION_TIMEOUT=600
MAX_TASK_DEPTH=5
MAX_PARALLEL_TASKS=8

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Model provider configuration for Zen tools
# ANTHROPIC_API_KEY=
# OPENAI_API_KEY=
# GOOGLE_API_KEY=
# XAI_API_KEY=

# Agent service endpoints for cross-stack communication
AGENT_API_URL=http://localhost:38886
AGENT_API_KEY=agent-dev-key-12345

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
HIVE_LOG_LEVEL=info
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1