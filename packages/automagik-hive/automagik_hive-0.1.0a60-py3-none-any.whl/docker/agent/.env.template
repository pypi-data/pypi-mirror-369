# Automagik Hive Agent Container Environment
# Copy this file to .env and customize as needed
#
# Agent Container Configuration (Docker-specific)
# External Ports: 35532 (postgres), 38886 (api)

# =============================================================================
# DATABASE CONFIGURATION (Container Internal)
# =============================================================================
POSTGRES_HOST=postgres-agent
POSTGRES_PORT=5432
POSTGRES_DB=hive_agent
POSTGRES_USER=agent
POSTGRES_PASSWORD=agent_password

# =============================================================================
# API CONFIGURATION (Container Internal)  
# =============================================================================
HIVE_API_HOST=0.0.0.0
HIVE_API_PORT=38886
HIVE_API_WORKERS=2
HIVE_ENVIRONMENT=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
HIVE_API_KEY=agent-dev-key-12345

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Add your API keys here
# ANTHROPIC_API_KEY=
# OPENAI_API_KEY=
# GOOGLE_API_KEY=

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
HIVE_LOG_LEVEL=info
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1