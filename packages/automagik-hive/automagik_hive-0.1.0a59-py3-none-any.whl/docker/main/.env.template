# Automagik Hive Main Container Environment
# Copy this file to .env and customize as needed
#
# Main Container Configuration (Docker-specific) 
# External Ports: 5532 (postgres), 8886 (api)

# =============================================================================
# DATABASE CONFIGURATION (Container Internal)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hive
POSTGRES_USER=ai
POSTGRES_PASSWORD=ai_password

# =============================================================================
# API CONFIGURATION (Container Internal)
# =============================================================================
HIVE_API_HOST=0.0.0.0
HIVE_API_PORT=8886
HIVE_API_WORKERS=4
HIVE_ENVIRONMENT=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================  
HIVE_API_KEY=your-hive-api-key-here

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# AI Provider API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
HIVE_LOG_LEVEL=info
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1