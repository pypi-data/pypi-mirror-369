# Include license and readme
include LICENSE
include README.md

# Include requirements files (optional, for reference)
include requirements.txt

# Include examples (optional, but recommended)
recursive-include examples *.py

# Exclude development files
exclude requirements-dev.txt
exclude PYTHON_SDK_REQUIREMENTS.md
exclude DEPLOY_TO_PYPI.md
exclude CLAUDE.md
exclude .env.local
exclude .gitignore

# Exclude test files (already excluded in setup.py)
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.pyc
recursive-exclude * *.pyo