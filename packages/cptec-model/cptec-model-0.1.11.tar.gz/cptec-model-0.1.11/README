# Para utilização do framework CPTEC é necessário criar um ambiente no anaconda
# e instalar todos pacotes listados abaixo:

# Comando para criar ambiente
conda create -n cptec python=3.10

# Comando para ativar ambiente (toda vez que for utilizar a ferramenta é necessário ativar este ambiente)
conda activate cptec

# Instalação dos pacotes necessários obrigatorios
conda install -c conda-forge xarray matplotlib pycurl cfgrib netcdf4 pynio xarray matplotlib pycurl cfgrib netcdf4 pynio dask ipywidgets

# Caso vá executar em notebook é necessário o pacote ipykernel
conda install -c anaconda ipykernel
