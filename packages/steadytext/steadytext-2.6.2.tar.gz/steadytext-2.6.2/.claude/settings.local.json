{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(export PGPASSWORD=password)",
      "Bash(./run_pgtap_tests.sh:*)",
      "Bash(psql:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(poe:*)",
      "Bash(find:*)",
      "Bash(docker system:*)",
      "Bash(docker buildx:*)",
      "Bash(docker cp:*)",
      "Bash(docker exec pg_steadytext_db find:*)",
      "Bash(docker exec:*)",
      "Bash(diff:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(echo:*)",
      "Bash(sudo service:*)",
      "Bash(sudo systemctl status:*)",
      "Bash(PGPASSWORD=password psql:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(STEADYTEXT_ALLOW_MODEL_DOWNLOADS=true uv run python -m pytest tests/test_structured.py::TestStructuredGeneration::test_generate_with_pydantic_model -xvs)",
      "Bash(STEADYTEXT_USE_FALLBACK_MODEL=true uv run python test_with_model.py)"
    ],
    "deny": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          },
          {
            "type": "command",
            "command": "claude-code-generic-hooks yolo"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ]
  },
  "enabledMcpjsonServers": [
    "context7",
    "kit",
    "fetch"
  ],
  "enableAllProjectMcpServers": true
}