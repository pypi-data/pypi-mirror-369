# Include the README and other root files
include README.md
include CLAUDE.md
include CHANGELOG.md
include CONTRIBUTING.md
include pyproject.toml
include requirements*.txt
include *.yaml
include *.png

# Include the license
include LICENSE*

# Include configuration examples
include config.example.json

# Include additional documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt
recursive-include scripts *.md
recursive-include src *.md
recursive-include tests *.md

# Include test files for source distributions
recursive-include tests *.py
recursive-include tests *.json
recursive-include tests *.yaml
recursive-include tests *.txt

# Include scripts
include run.py
include mcp.sh

# Include package data
recursive-include src/mcpcommander *.py
recursive-include src/mcpcommander *.typed
recursive-include src/mcpcommander *.json

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info

# Exclude build and cache directories
prune build
prune dist
prune .pytest_cache
prune .coverage
prune htmlcov
prune .mypy_cache
prune .ruff_cache
prune venv
prune .venv

# Exclude IDE and editor files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude specific config files that shouldn't be packaged
exclude config.json
exclude bandit-report.json
