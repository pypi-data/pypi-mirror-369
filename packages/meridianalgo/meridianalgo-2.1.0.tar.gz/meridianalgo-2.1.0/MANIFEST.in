include README.md
include LICENSE
include requirements.txt
include CHANGELOG.md
include CONTRIBUTING.md
include .env.example

# Include all Python files
recursive-include meridianalgo *.py

# Include documentation
recursive-include docs *.md *.rst *.txt

# Exclude development and build files
exclude .gitignore
exclude *.pyc
exclude *.pyo
exclude *~
exclude .DS_Store
exclude Thumbs.db

# Exclude test files and directories
prune tests
prune .git
prune .kiro
prune __pycache__
prune *.egg-info
prune build
prune dist

# Exclude IDE files
exclude *.bat
exclude *.sh
exclude *.command
exclude *.ps1
exclude ara.py
exclude run_ara.py
exclude ara_launcher.py
exclude Ara_AI_Launcher.bat
exclude start_ara.bat
exclude install_mac.command
exclude check_accuracy.py
exclude comprehensive_report.py
exclude view_predictions.py

# Exclude deployment files
exclude DEPLOYMENT_INSTRUCTIONS.md
exclude FINAL_DEPLOYMENT_COMMANDS.md
exclude PROJECT_STATUS.md