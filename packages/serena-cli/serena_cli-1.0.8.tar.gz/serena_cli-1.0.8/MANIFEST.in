# Include README and documentation
include README.md
include LICENSE
include CHANGELOG.md
include QUICK_START.md
include QUICK_START_EN.md
include usage_instructions.md
include usage_instructions_EN.md
include PROJECT_STATUS.md

# Include installation scripts
include install.py
include install.sh
include install.bat

# Include test files
recursive-include tests *.py
recursive-include tests *.yml
recursive-include tests *.yaml

# Include examples
recursive-include examples *.py
recursive-include examples *.yml
recursive-include examples *.yaml

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Include configuration files
include pyproject.toml
include setup.cfg
include setup.py

# Include type hints
recursive-include src *.pyi
include src/serena_cli/py.typed

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude .git*
global-exclude .venv
global-exclude venv
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude dist
global-exclude build
global-exclude *.egg-info
